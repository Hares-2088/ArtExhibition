@model ArtExhibition.Models.Exhibition

<div class="container">
    <h1 class="text-center" style="color: #ffa726;">@Model.Title</h1>
    <p class="text-center text-muted">@Model.StartDate.ToString("MMMM dd, yyyy") - @Model.EndDate.ToString("MMMM dd, yyyy")</p>

    <div class="row mt-5">
        <!-- Exhibition Room -->
        <div class="col-md-6">
            <h3 style="color: #495057;">Room</h3>
            <p><strong>Room Name:</strong> @Model.Room.Name</p>
            <p><strong>Description:</strong> @Model.Room.Description</p>
        </div>

        <!-- Artists -->
        <div class="col-md-6">
            <h3 style="color: #495057;">Artists</h3>
            @if (Model.ExhibitionArtists.Any())
            {
                <div class="row">
                    @foreach (var artist in Model.ExhibitionArtists.Select(ea => ea.Artist))
                    {
                        <div class="col-md-4 text-center">
                            <img src="@artist.ProfilePictureUrl" alt="@artist.Name" class="img-thumbnail" style="height: 150px; width: 150px; object-fit: cover;" />
                            <p class="mt-2"><strong>@artist.Name</strong></p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No artists are associated with this exhibition.</p>
            }
        </div>
    </div>

    <!-- Artworks -->
    <div class="mt-5">
        <h3 style="color: #495057;">Artworks</h3>
        @if (Model.ExhibitionArtworks.Any())
        {
            <div class="row">
                @foreach (var artwork in Model.ExhibitionArtworks.Select(ea => ea.Artwork))
                {
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <img src="@artwork.ImageUrl" alt="@artwork.Title" class="card-img-top" style="height: 200px; object-fit: cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@artwork.Title</h5>
                                <p class="card-text">@artwork.Price.ToString("C")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No artworks are associated with this exhibition.</p>
        }
    </div>
</div>
