@model ArtExhibition.Models.Artist

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Manage Your Profile</h1>

    <div class="row">
        <div class="col-md-6">
            <h3>Profile Details</h3>
            <form asp-action="UpdateProfile" method="post">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Bio">Bio</label>
                    <textarea id="Bio" asp-for="Bio" class="form-control"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>

        <div class="col-md-6">
            <h3>Your Artworks</h3>
            <a class="btn btn-success mb-3" asp-action="AddArtwork">Add New Artwork</a>
            <ul class="list-group">
                @foreach (var artwork in Model.Artworks)
                {
                    <li class="list-group-item">
                        <strong>@artwork.Title</strong> - @artwork.Price.ToString("C")
                        <a asp-action="EditArtwork" asp-route-id="@artwork.ArtworkId" class="btn btn-sm btn-primary float-right">Edit</a>
                        <form asp-action="DeleteArtwork" asp-route-id="@artwork.ArtworkId" method="post" class="float-right mr-2">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
