@model ArtExhibition.Models.ViewModels.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-footer-gradient text-white text-center">
                    <h3>Create Your Account</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-gradient w-100">Register</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Already have an account? <a asp-action="Login" asp-controller="Account" class="text-decoration-none text-gradient">Log In</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gradient {
        background: linear-gradient(45deg, #ffa726, #f48fb1);
        border: none;
        color: white;
        font-weight: bold;
    }

    .btn-gradient:hover {
        background: linear-gradient(45deg, #f48fb1, #ffa726);
        color: #fff;
    }

    .text-gradient {
        color: #ffa726;
        font-weight: bold;
    }

    .text-gradient:hover {
        color: #f48fb1;
    }

    .bg-footer-gradient {
        background: linear-gradient(45deg, #343a40, #495057);
        color: #fff;
    }
</style>
